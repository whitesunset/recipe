<!-- Start Breadcrumbs -->
<div id="breadcrumbs">
    <a href="#">Home</a> &raquo;
    <a title="Portfolio" href="#">Gallery</a> &raquo;
    <span class="current">Items</span>
    <div class="clear"></div>
</div>
<!-- End Breadcrumbs -->
<!-- Start Page Title -->
<div class="PageTitle">
    <h1>Items</h1>
    <%= link_to 'New Item', new_item_path %>
</div>
<!-- End Page Title -->
<!-- Start Content Wrapper -->
<div id="content_wrapper">
    <div class="box">
        <!-- View By Box -->
        <div class="splitter_wrap">
            <strong>View by:</strong>
            <ul id="filter" class="splitter">
                <li><a href="#top" rel="everyone" title="All">All</a></li>
                <li><a href="#top" rel="web" title="Web">Web</a></li>
                <li><a href="#top" rel="html" title="HTML">HTML</a></li>
                <li><a href="#top" rel="psd" title="PSD">PSD</a></li>
                <li><a href="#top" rel="video" title="Video">Video</a></li>
            </ul>
            <div class="clear"></div>
        </div>
        <!-- Portfolio Full Box -->
        <ul id="portfolio" class="image-grid">
            <% @items.each do |item| %>
                <li class="everyone web">
                    <%= link_to item.title, item %>
                    <%= link_to item do %>
                        <img src="<%= item.image %>" width="140" height="140" alt="" class="pic" />
                    <% end %>
                    <%= link_to 'Edit', edit_item_path(item) %>
                    <%= link_to 'Delete', item, :confirm => 'Are you sure?', :method => :delete %>
                </li>
            <% end %>
        </ul>
        <!-- Start Paging -->
        <div class="wp-pagenavi">
            <ul>
                <li><span class="pages">Page 1 of 7</span></li>
                <li><a href="#" class="first">&laquo; First</a></li>
                <li><a href="#" class="previouspostslink">&lsaquo;</a></li>
                <li><a href="#" class="page">1</a></li>
                <li><a href="#" class="page">2</a></li>
                <li><a href="#" class="page">3</a></li>
                <li><a href="#" class="page">4</a></li>
                <li><span class="current">5</span></li>
                <li><span class="extend">...</span></li>
                <li><a href="#" class="nextpostslink">&rsaquo;</a></li>
                <li><a href="#" class="last">Last &raquo;</a></li>
            </ul>
        </div>
        <div class="clear"></div>
    </div>
</div>
<!-- End Content Wrapper -->
